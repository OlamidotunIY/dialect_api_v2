model Sprint {
    id        String      @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    startDate DateTime?
    endDate   DateTime?
    position  Int
    goal      String?
    createdAt DateTime    @default(now())
    state     SprintState @default(Inactive)
    project   Project     @relation(fields: [projectId], references: [id])
    projectId String      @db.ObjectId
    cards     Card[]
}

enum SprintState {
    Active
    Inactive
    Completed
}
