model Activity {
    id          String       @id @default(auto()) @map("_id") @db.ObjectId
    type        ActivityType // e.g., "PROJECT_UPDATED", "TASK_COMPLETED"
    description String? // Optional description
    streamId    String?      @db.ObjectId
    projectId   String?      @db.ObjectId
    taskId      String?      @db.ObjectId
    workspaceId String?      @db.ObjectId
    userId      String       @db.ObjectId
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt

    // Relations
    stream    Stream?    @relation(fields: [streamId], references: [id])
    project   Project?   @relation(fields: [projectId], references: [id])
    task      Task?      @relation(fields: [taskId], references: [id])
    workspace Workspace? @relation(fields: [workspaceId], references: [id])
    user      User       @relation(fields: [userId], references: [id])
}

enum ActivityType {
    PROJECT_CREATED
    PROJECT_UPDATED
    PROJECT_DELETED
    TASK_CREATED
    TASK_UPDATED
    TASK_COMPLETED
    TASK_DELETED
    TASK_ADD_DEPENDENCY
    TASK_REMOVE_DEPENDENCY
    TASK_ADD_LABEL
    TASK_REMOVE_LABEL
    TASK_ADD_CHECKLIST_ITEM
    TASK_REMOVE_CHECKLIST_ITEM
    TASK_CHECK_CHECKLIST_ITEM
    TASK_UNCHECK_CHECKLIST_ITEM
    TASK_CREATE_SUBTASK
    TASK_DELETE_SUBTASK
    TASK_ASSIGN_USER
    TASK_UNASSIGN_USER
    TASK_REASSIGN_USER
    TASK_SET_DUE_DATE
    TASK_SET_PRIORITY
    TASK_SET_STATUS
    TASK_SET_DESCRIPTION
    TASK_SET_REPORTER
    COMMENT_CREATED
    COMMENT_UPDATED
    COMMENT_DELETED
    USER_JOINED
    USER_LEFT
    USER_INVITED
    USER_REMOVED
    TEAM_CREATED
    TEAM_UPDATED
    TEAM_DELETED
    STREAM_CREATED
    STREAM_UPDATED
    STREAM_DELETED
}
